<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >
    <com.allen.supertextviewlibrary.SuperTextView
        android:id="@+id/stv_xt1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        stv:sLeftIconRes="@mipmap/xt1"
        stv:sBottomLineMargin="0dp"
        stv:sLeftTextString="协同工作任务" />

    <com.allen.supertextviewlibrary.SuperTextView
        android:id="@+id/stv_xt2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        stv:sLeftIconRes="@mipmap/xt2"
        stv:sBottomLineMargin="0dp"
        stv:sLeftTextString="团队互助" />

</LinearLayout>