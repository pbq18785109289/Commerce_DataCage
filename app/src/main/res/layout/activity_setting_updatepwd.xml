<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical" >
    <!-- toolbar-->
    <include layout="@layout/toolbar"/>

    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"
        android:background="#c0c0c0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tv_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/et_old"
            android:text="用户旧密码:"
            android:textSize="15sp" />

        <com.dhcc.datacage.view.PasswordEditText
            android:id="@+id/et_old"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_old"
            android:layout_weight="0.85"
            android:background="@null"
            android:ems="10" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/et_new"
            android:text="用户新密码:"
            android:textSize="15sp" />

        <com.dhcc.datacage.view.PasswordEditText
            android:id="@+id/et_new"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_new"
            android:layout_weight="0.85"
            android:background="@null"
            android:ems="10" />
    </RelativeLayout>
    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"
        android:background="#c0c0c0" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/et_confirm"
            android:text="确认新密码:"
            android:textSize="15sp" />

        <com.dhcc.datacage.view.PasswordEditText
            android:layout_marginLeft="20dp"
            android:id="@+id/et_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_confirm"
            android:layout_weight="0.85"
            android:background="@null"
            android:ems="10" />
    </RelativeLayout>
    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"
        android:background="#c0c0c0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="280dp"
            android:layout_height="38dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:background="@mipmap/sure" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="280dp"
            android:layout_height="38dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:background="@mipmap/btn_cancel" />
    </LinearLayout>

</LinearLayout>